        <label>Client Secret</label>
        <type>Text</type>
        <length>255</length>
        <required>true</required>
    </fields>
    <fields>
        <fullName>RedirectUri__c</fullName>
        <label>Redirect URI</label>
        <type>Url</type>
        <required>true</required>
    </fields>
    <fields>
        <fullName>ApiToken__c</fullName>
        <label>API Token</label>
        <type>Text</type>
        <length>255</length>
        <required>true</required>
